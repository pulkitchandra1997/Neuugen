<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/homeheadlayout"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are in"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/colorAccent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/location">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucknow"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/colorAccent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf0d7;"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/locationicon"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/homecarousel"
        android:layout_below="@+id/homeheadlayout"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="#fff"
                >

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="200dp"
                    android:src="@drawable/imgplaceholder"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="#fff"
                app:cardUseCompatPadding="true"
                >
                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="200dp"
                    android:src="@drawable/imgplaceholder"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="#fff"
                >

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="200dp"
                    android:src="@drawable/imgplaceholder"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="#fff"
                app:cardUseCompatPadding="true"
                >
                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="200dp"
                    android:src="@drawable/imgplaceholder"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/GreyColor"
        android:layout_below="@+id/homecarousel"
        android:id="@+id/servicehead">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVICES"
            android:padding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:id="@+id/serviceicons"
        android:layout_below="@+id/servicehead"
        android:layout_marginTop="10dp"
        >
        <TableRow>
            <LinearLayout
                android:layout_height="120dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/properties"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/propertiesicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Properties"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_height="120dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:id="@+id/salon"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/beautyicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Salon"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="120dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/events"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/eventicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="120dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/appliancerepair"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/applianceicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appliance Repair"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="120dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/homerenovation"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/renovationicon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Renovation"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="120dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/holidayplanner"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/holidayicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday Planner"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
