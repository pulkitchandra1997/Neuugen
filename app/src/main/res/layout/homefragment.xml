<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="60dp"
    android:background="@color/bootstrap_brand_secondary_fill">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/homeheadlayout"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are in"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/normaheading"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/colorAccent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/location">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucknow"
                    android:id="@+id/locationtext"
                    android:padding="5dp"
                    android:textSize="@dimen/headingtext"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/colorAccent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf0d7;"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/locationicon"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/homecarousel"
        android:layout_below="@+id/homeheadlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:id="@+id/homeimg1"
                    android:theme="@style/Base.Widget.AppCompat.ImageButton"
                    android:src="@drawable/homeimage1"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:id="@+id/homeimg2"
                    android:theme="@style/Base.Widget.AppCompat.ImageButton"
                    android:src="@drawable/homeimage2"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:id="@+id/homeimg3"
                    android:theme="@style/Base.Widget.AppCompat.ImageButton"
                    android:src="@drawable/homeimage3"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"                    />
               <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                   android:layout_margin="10dp"
                   android:id="@+id/homeimg4"
                   android:theme="@style/Base.Widget.AppCompat.ImageButton"
                   android:src="@drawable/homeimage4"
                   android:fitsSystemWindows="true"
                   android:scaleType="centerCrop"                    />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:id="@+id/homeimg5"
                android:theme="@style/Base.Widget.AppCompat.ImageButton"
                android:src="@drawable/homeimage5"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"                />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Greybg"
        android:layout_below="@+id/homecarousel"
        android:id="@+id/servicehead">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SERVICES"
            android:padding="10dp"
            android:id="@+id/serviceheadtext"
            android:textSize="@dimen/normaheading"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/PrimaryText"
            />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:id="@+id/serviceicons"
        android:layout_below="@+id/servicehead"
        android:layout_marginTop="10dp"
        >
        <TableRow>
            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/properties"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/realestate" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Properties"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:id="@+id/salon"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/hairsalon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grooming"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/events"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/eventicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/appliancerepair"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/applianceicon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:layout_gravity="center"
                    android:text="Appliance Repair"
                    android:textColor="@color/PrimaryText"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/homerenovation"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/renovationicon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Renovation"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_height="90dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:padding="3dp"
                android:id="@+id/learning"
                android:background="@drawable/cellshape"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/learningicon" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learning"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Greybg"
            android:layout_below="@+id/serviceicons"
            android:id="@+id/insurancehead"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROTECTION PROGRAM"
                android:padding="10dp"
                android:textSize="@dimen/normaheading"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/PrimaryText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insurancehead"
            android:layout_marginTop="10dp"
            android:id="@+id/protectionprgrm"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/insurancelogo"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neuugen Insurance Protection Program for Services"
                    android:padding="6dp"
                    android:textSize="@dimen/headingtext"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="upto Rs. 5,000 insurance protection with every request"
                    android:padding="6dp"
                    android:textSize="@dimen/contenttext"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/PrimaryText"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn more"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/DividerColor"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/postformfab"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/DividerColor"
        android:elevation="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:tooltipText="Post Your Advertisement"
        android:layout_above="@+id/navigation"
        app:fabCustomSize="60dp"
        app:maxImageSize="40dp"
        app:rippleColor="@color/colorPrimary"
        app:srcCompat="@drawable/postform" />

</RelativeLayout>