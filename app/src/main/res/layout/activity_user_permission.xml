<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPermission"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The following permissions are required before proceeding."
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/quicksandbold"
        android:textColor="@color/PrimaryText"
        android:paddingBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Camera"
        android:gravity="left"
        android:layout_gravity="left"
        android:textSize="15sp"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/PrimaryText"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Read and write storage"
        android:gravity="left"
        android:layout_gravity="left"
        android:textSize="15sp"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/PrimaryText"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Read and access contacts"
        android:gravity="left"
        android:layout_gravity="left"
        android:textSize="15sp"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/PrimaryText"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Read SMS or MMS"
        android:gravity="left"
        android:layout_gravity="left"
        android:textSize="15sp"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/PrimaryText"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Read and call phone numbers"
        android:gravity="left"
        android:layout_gravity="left"
        android:textSize="15sp"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/PrimaryText"
        android:padding="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow"
            android:backgroundTint="@color/DividerColor"
            android:layout_marginTop="20dp"
            app:cornerRadius="10dp"
            android:textSize="20sp"
            android:padding="15dp"
            android:id="@+id/allowbtn"/>

    </LinearLayout>

</LinearLayout>