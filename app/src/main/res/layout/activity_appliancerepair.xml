<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeServices.ApplianceRepairServices.Appliancerepair"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appliances Repair &amp; Installation"
            android:padding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:id="@+id/homecarousel"
            android:layout_below="@+id/homeheadlayout"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:id="@+id/arimg1"
                    android:theme="@style/Base.Widget.AppCompat.ImageButton"
                    android:src="@drawable/imgplaceholder"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_margin="10dp"
                    android:layout_height="200dp"
                    android:id="@+id/arimg2"
                    android:theme="@style/Base.Widget.AppCompat.ImageButton"
                    android:src="@drawable/imgplaceholder"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:id="@+id/arimg3"
                    android:theme="@style/Base.Widget.AppCompat.ImageButton"
                    android:src="@drawable/imgplaceholder"
                    />

            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What type of service do you need?"
                        android:gravity="center"
                        android:textColor="@color/PrimaryText"
                        android:textSize="@dimen/headingtext"
                        android:fontFamily="@font/quicksandbold"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#fff"                        android:id="@+id/repairingservice"
                        app:cardUseCompatPadding="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Repairing"
                                    android:gravity="start"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/headingtext"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="&#xf35a;"
                                    android:gravity="end"
                                    android:id="@+id/repairicon"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="@dimen/headingtext"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/repairtext"
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="5dp"
                                android:gravity="start"
                                android:textColor="@color/SecondaryText"
                                android:textSize="@dimen/contenttext"
                                android:fontFamily="@font/quicksand"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="5dp"
                                android:gravity="start"
                                android:id="@+id/repairmsg"
                                android:visibility="gone"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp"
                                android:fontFamily="@font/quicksand"
                                />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#fff"                        app:cardUseCompatPadding="true"
                        android:id="@+id/installationservice"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Installation"
                                android:gravity="start"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/headingtext"
                                android:fontFamily="@font/quicksandbold"
                                />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="&#xf35a;"
                                    android:id="@+id/installicon"
                                    android:gravity="end"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="@dimen/headingtext"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/installationtext"
                                android:lineSpacingExtra="5dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start"
                                android:textColor="@color/SecondaryText"
                                android:textSize="@dimen/contenttext"
                                android:fontFamily="@font/quicksand"
                                />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="5dp"
                                android:gravity="start"
                                android:id="@+id/installmsg"
                                android:visibility="gone"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp"
                                android:fontFamily="@font/quicksand"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sparepartsbtn"
            android:background="@color/bootstrap_alert_cross_default">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spare Parts List"
                android:padding="10dp"
                android:textSize="@dimen/headingtext"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/PrimaryText"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:textSize="@dimen/headingtext"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/PrimaryText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appliancerepairhead"
                android:gravity="start"
                android:textColor="@color/PrimaryText"
                android:textSize="@dimen/normaheading"
                android:fontFamily="@font/quicksandbold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf3ed;"
                    android:gravity="start"
                    android:textColor="@color/PrimaryText"
                    android:textSize="@dimen/contenttext"
                    android:id="@+id/custprotecticon"
                    android:fontFamily="@font/quicksandbold"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Protection of upto Rs. 5000/- for damages."
                    android:textColor="@color/PrimaryText"
                    android:textSize="@dimen/contenttext"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/quicksand"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf0ad;"
                    android:gravity="start"
                    android:textColor="@color/PrimaryText"
                    android:textSize="@dimen/contenttext"
                    android:id="@+id/sparepartsicon"
                    android:fontFamily="@font/quicksandbold"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fixed Price for spare parts."
                    android:textColor="@color/PrimaryText"
                    android:textSize="@dimen/contenttext"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/quicksand"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf274;"
                    android:gravity="start"
                    android:textColor="@color/PrimaryText"
                    android:textSize="@dimen/contenttext"
                    android:id="@+id/servicegrntyicon"
                    android:fontFamily="@font/quicksandbold"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 days service guarantee."
                    android:textColor="@color/PrimaryText"
                    android:textSize="@dimen/contenttext"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</LinearLayout>