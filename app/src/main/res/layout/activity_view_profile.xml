<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfile"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xf060;"
            android:padding="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorAccent"
            android:id="@+id/backtoaccount"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Details"
            android:padding="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:hasBorder="false"
            android:layout_centerHorizontal="true"
            android:id="@+id/profileimg"
            android:src="@drawable/defaultpic"
            />
        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:hasBorder="false"
            android:id="@+id/profileimgbtn"
            android:src="@drawable/camera"
            android:layout_alignBottom="@+id/profileimg"

            android:layout_alignEnd="@+id/profileimg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileimg"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pranjal Verma"
                android:padding="15dp"
                android:textSize="25dp"
                android:id="@+id/nametext"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/colorAccent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&#xf303;"
                android:gravity="right"
                android:padding="15dp"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:id="@+id/editprofileicon"/>

        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Information"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emailicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="&#xf0e0;"
            android:textColor="@color/PrimaryText"
            android:textSize="15dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:padding="10dp"
            android:textSize="15dp"
            android:id="@+id/emailtext"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/PrimaryText"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Verify"
            android:padding="10dp"
            android:gravity="end"
            android:layout_weight="1"
            android:textSize="15dp"
            android:id="@+id/emailverify"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/DividerColor"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xf3cd;"
            android:padding="10dp"
            android:textColor="@color/PrimaryText"
            android:textSize="15dp"
            android:id="@+id/phoneicon"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:padding="10dp"
            android:textSize="15dp"
            android:id="@+id/phonetext"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/PrimaryText"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verified"
            android:padding="10dp"
            android:gravity="end"
            android:layout_weight="1"
            android:textSize="15dp"
            android:id="@+id/phoneverify"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/DividerColor"
            />
    </LinearLayout>

</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Address"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/PrimaryText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf3c5;"
                        android:padding="10dp"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:id="@+id/addressicon"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/addresstext"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:padding="10dp"
                        android:text="Address"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address Verify"
                        android:padding="10dp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:id="@+id/addverify"
                        android:fontFamily="@font/quicksand"
                        android:textColor="@color/DividerColor"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf2bb;"
                        android:padding="10dp"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:id="@+id/cityicon"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/quicksand"
                        android:textColor="@color/PrimaryText"
                        android:id="@+id/citytext"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pincodetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:padding="10dp"
                        android:text="Pincode"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/statetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:padding="10dp"
                        android:text="State"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Information"
                android:padding="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/PrimaryText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf224;"
                    android:padding="10dp"
                    android:textColor="@color/PrimaryText"
                    android:textSize="15dp"
                    android:id="@+id/gendericon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/gendertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:padding="10dp"
                    android:text="Gender"
                    android:textColor="@color/PrimaryText"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf1fd;"
                    android:padding="10dp"
                    android:textColor="@color/PrimaryText"
                    android:textSize="15dp"
                    android:id="@+id/bdayicon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/PrimaryText"
                    android:id="@+id/bdaytext"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>