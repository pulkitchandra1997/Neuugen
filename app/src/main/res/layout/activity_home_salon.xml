<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeServices.SalonServices.HomeSalon"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Salon Services"
            android:padding="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/homecarousel"
                android:layout_below="@+id/homeheadlayout"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="380dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:id="@+id/hsimg1"
                        android:theme="@style/Base.Widget.AppCompat.ImageButton"
                        android:src="@drawable/imgplaceholder"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="380dp"
                        android:layout_margin="10dp"
                        android:layout_height="200dp"
                        android:id="@+id/hsimg2"
                        android:theme="@style/Base.Widget.AppCompat.ImageButton"
                        android:src="@drawable/imgplaceholder"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="380dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:id="@+id/hsimg3"
                        android:theme="@style/Base.Widget.AppCompat.ImageButton"
                        android:src="@drawable/imgplaceholder"
                        />
                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All Services"
                        android:gravity="center"
                        android:textColor="@color/PrimaryText"
                        android:textSize="25dp"
                        android:fontFamily="@font/quicksandbold"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#fff"
                        android:id="@+id/mensalonservice"
                        app:cardUseCompatPadding="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Men's salon at home"
                                    android:gravity="start"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="25dp"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="&#xf35a;"
                                    android:gravity="end"
                                    android:id="@+id/mensalonicon"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="25dp"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mensalontext"
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="5dp"
                                android:gravity="start"
                                android:textColor="@color/SecondaryText"
                                android:textSize="15dp"
                                android:fontFamily="@font/quicksand"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="5dp"
                                android:gravity="center"
                                android:id="@+id/mensalonmsg"
                                android:visibility="gone"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp"
                                android:fontFamily="@font/quicksand"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#fff"
                        app:cardUseCompatPadding="true"
                        android:id="@+id/womensalonservice"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Women's salon at home"
                                    android:gravity="start"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="25dp"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="&#xf35a;"
                                    android:id="@+id/womensalonicon"
                                    android:gravity="end"
                                    android:textColor="@color/PrimaryText"
                                    android:textSize="25dp"
                                    android:fontFamily="@font/quicksandbold"
                                    />
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/womensalontext"
                                android:lineSpacingExtra="5dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start"
                                android:textColor="@color/SecondaryText"
                                android:textSize="15dp"
                                android:fontFamily="@font/quicksand"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="5dp"
                                android:gravity="center"
                                android:id="@+id/womensalonmsg"
                                android:visibility="gone"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp"
                                android:fontFamily="@font/quicksand"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salonservicetext"
                    android:gravity="start"
                    android:textColor="@color/PrimaryText"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksandbold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf017;"
                        android:gravity="start"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:id="@+id/timericon"
                        android:fontFamily="@font/quicksandbold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability from 9 am to 8 pm."
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/quicksand"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf1ae;"
                        android:gravity="start"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:id="@+id/trainericon"
                        android:fontFamily="@font/quicksandbold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trained specialist for every service."
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/quicksand"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf057;"
                        android:gravity="start"
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:id="@+id/cleanicon"
                        android:fontFamily="@font/quicksandbold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No mess left behind."
                        android:textColor="@color/PrimaryText"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/quicksand"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>