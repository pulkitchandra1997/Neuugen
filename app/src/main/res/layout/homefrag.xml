<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bootstrap_brand_secondary_fill">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are in"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:fontFamily="@font/quicksand"
            android:textColor="@color/colorAccent"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/location">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucknow"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/colorAccent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf0d7;"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/locationicon"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

            <include layout="@layout/content_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/GreyColor">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERVICES"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginTop="10dp"
                >
                <TableRow>
                    <LinearLayout
                        android:layout_height="150dp"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/propertiesicon"
                            grid:layout_columnWeight="1" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Properties"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/quicksandbold"
                            android:textColor="@color/PrimaryText"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="150dp"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/massagelogo"
                            grid:layout_columnWeight="1" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Massage &amp; Spa"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/quicksandbold"
                            android:textColor="@color/PrimaryText"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="150dp"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/eventicon"
                            grid:layout_columnWeight="1" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weddings &amp; Events"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/quicksandbold"
                            android:textColor="@color/PrimaryText"
                            />
                    </LinearLayout>
                </TableRow>

                <TableRow>
                    <LinearLayout
                        android:layout_height="150dp"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/applianceicon"
                            grid:layout_columnWeight="1" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appliance Repair"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/quicksandbold"
                            android:textColor="@color/PrimaryText"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="150dp"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/renovationicon"
                            grid:layout_columnWeight="1" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Renovation"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/quicksandbold"
                            android:textColor="@color/PrimaryText"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="150dp"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        grid:layout_columnWeight="1"
                        grid:layout_rowWeight="1"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/holidayicon"
                            grid:layout_columnWeight="1" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Holiday Planner"
                            android:textSize="15dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/quicksandbold"
                            android:textColor="@color/PrimaryText"
                            />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#E4E1E1"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>